@* Vista DogImage.cshtml en Views/Dog *@
@{
    ViewData["Title"] = "Imagen Aleatoria de Perro";
}

<h1>@ViewData["Title"]</h1>

<!-- Botón para obtener una nueva imagen -->
<form method="get" action="/">
    <button type="submit">Obtener Perro Aleatorio</button>
</form>

<!-- Mostrar la imagen si ViewData["ImageUrl"] no está vacío -->
@if (!string.IsNullOrEmpty(ViewData["ImageUrl"]?.ToString()))
{
    <br />
    <img src="@ViewData["ImageUrl"]" alt="Perro Aleatorio" style="max-width: 100%; height: auto;" />
}